<?xml version="1.0" encoding="UTF-8"?>
<validation>
    <field name="id">
        <condition expression="updateAction">
            <rule type="NonNullRule"/>
        </condition>
    </field>

    <field name="holderType">
        <condition expression="createAction">
            <rule type="NonNullRule"/>
            <rule type="HolderTypeRule"/>
        </condition>
    </field>

    <field name="username">
        <condition expression="createOrUpdateAction">
            <rule type="NotBlankRule"/>
            <rule type="MaxLengthRule" maxLength="32"/>
            <rule type="UniqueUsernameRule"/>
        </condition>
    </field>

    <field name="password">
        <condition expression="createAction">
            <rule type="NotBlankRule"/>
            <rule type="MaxLengthRule" maxLength="32"/>
        </condition>
    </field>

    <field name="usernameType">
        <condition expression="createOrUpdateAction">
            <rule type="NonNullRule"/>
        </condition>
    </field>

    <field name="status">
        <condition expression="createAction">
            <rule type="NonNullRule"/>
        </condition>
    </field>

    <field name="contact" type="dto">
        <condition expression="createAction">
            <rule type="NonNullRule"/>
        </condition>
        <validationConfig ref="platform/contact"/>
    </field>

    <field name="userRoles" type="dtoList">
        <validationConfig>
            <field name="role" type="dto">
                <condition expression="true">
                    <rule type="NonNullRule"/>
                </condition>
                <validationConfig>
                    <field name="id">
                        <condition expression="true">
                            <rule type="NonNullRule"/>
                            <rule type="RoleExistsRule"/>
                        </condition>
                    </field>
                </validationConfig>
            </field>
        </validationConfig>
    </field>
</validation>
